@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";
@import "./message.styl";


.container{
  position : absolute;
  left: 0px;
  bottom: 30px;
  top: 45px;
  right: 0px;
  overflow : hidden;
}

.bottom{
  position: fixed;
  background-color:#eee;
  z-index : 1000;
  left: 0px;
  right: 0px;
  bottom : 0px;
  text-align: center;
  border-top:1px solid #ccc;

    .input{
      margin-left:6px;
      margin-right: 95px;
      padding: 6px 0px;
      font-size: 0;
      position :relative;

      .sendMes{
        font-size:14px;
        width: 100%;
        outline :none;
        border:1px solid #ccc;
        height:20px;
        padding:5px 5px;
        border-radius : 5px;
      }


    }
  .btn{
    position :absolute;
    right:10px;
    bottom: 6px;
    font-size: 0px;
    img{
      width:100%;
      height:100%;
    }
    .btn-item{
      width:30px;
      height:30px;
      display: inline-block;
    }
    .sendMesBtn{
      display:none;
      font-size: 14px;
      width:60px;
      color:#fff;
      height:30px;
      line-height : 30px;
      background-color : #59b5f8;
      border-radius : 5px;
    }

      .upload{
        margin-right: 14px;
      }
  }

  .sendImage{
    position: absolute;
    left: 0px;
    right: 0px;
    top: 0px;
    bottom: 0px;
    z-index: 100;
    width:30px;
    height:30px;
    overflow : hidden;
    opacity :0;
    font-size:14px;
  }

}
.loginNotice{
  text-align:center;

  background-color:#eb5534;
  font-size:12px;
  display:none;
  a{
    color:#fff;
    height: 34px;
    line-height:34px;
    display :inline-block;
  }
  img{
    height: 25px;
    width: 25px;
    vertical-align :middle;
    margin-left: 5px;
    margin-top:-2px;
  }

}