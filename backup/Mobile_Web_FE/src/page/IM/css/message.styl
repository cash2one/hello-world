body {
  background: #eee;

  color: #000;
}

#message_container {
  padding: 0 8px;
}


.clearfix:after {
  content: " ";
  visibility: hidden;
  display: block;
  height: 0;
  clear: both;
}

.message {
  margin-bottom: 16px;
  float: left;
  width: 100%;
  color: #000;
  line-height: 1.4;
  font-family: "Helvetica Neue", Helvetica, "Hiragino Sans GB", "Microsoft YaHei", "å¾®è½¯é›…é»‘", Arial, sans-serif;

  .avatar {
    width: 40px;
    height: 40px;
    border-radius: 2px;
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
    float: left;
    cursor: pointer;
  }

  .content {
    overflow: hidden;
  }

  .nickname {
    font-weight: 400;
    padding-left: 10px;
    font-size: 12px;
    height: 22px;
    line-height: 24px;
    color: #4f4f4f;
    width: 350px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal;
  }
}

.message.me {
  float: right;
  text-align: right;
  clear: right;

  .avatar {
    float: right;
  }
  .nickname {
    display: none;
  }
}

.bubble {
  max-width: 85%;
  min-height: 1em;
  display: inline-block;
  vertical-align: top;
  position: relative;
  text-align: left;
  font-size: 14px;
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  margin: 0 10px;

  &.bubble_default {
    background-color: #fff;
  }

  &:before, &:after {
    position: absolute;
    top: 14px;
    border: 6px solid transparent;
    content: " "
  }

  &.left {
    &:before, &:after {
      right: 100%
    }
    &:after {
      border-right-color: #FFF;
      border-right-width: 4px;
    }
  }
  &.right {
    &:before, &:after {
      left: 100%
    }
    &:after {
      border-left-color: #59b5f8;
    }
  }

  &.bubble_primary {
    background-color: #59b5f8;
    font-size:14px;
    color: #fff;

    &.left:after {
      border-right-color: #b2e281;
      border-right-width: 4px
    }

    &.right:after {
      border-left-color: #59b5f8;
      border-left-width: 4px
    }
  }

  &.no_arrow {
    &:before, &:after {
      display: none;
    }
  }

  .bubble_body {
    word-wrap: break-word;
    word-break: break-all;
    min-height: 25px;
    .plain {
      padding: 9px 8px;
      .ico_loading {
        position: absolute;
        right: 100%;
        top: 50%;
        margin-top: -7px;
        margin-right: 5px
      }
      .icon-notice {
        position: absolute;
        position: absolute;
        right: 100%;
        top: 50%;
        margin-top: -11px;
        margin-right: 5px;
        cursor: pointer;
        font-size: 22px;
        color: #e35247;
      }
    }

    .picture {
      border-radius: 4px;
      overflow: hidden;
      position: relative;
      img {
        display: block;
        cursor: pointer;
        max-width: 150px;
        max-height: 150px;
      }
    }
    img {
      vertical-align: middle;
    }
  }
}

.message_system {
  text-align: center;
  margin: 10px auto;
  max-width: 50%;

  .content {
