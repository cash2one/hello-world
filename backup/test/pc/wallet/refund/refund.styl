
.promotion-refund
    > .header
        strong
            margin-left 10px

    > .body
        padding 20px

    .input-group
        .input
            width 93px

    .refund-success,
    .refund-fail
        > .icon-check-circle
        > .icon-info-circle
            font-size 30px
            margin-right 10px
            vertical-align middle

    .refund-success
        > .desc
            display inline-block
            vertical-align middle
            line-height 1.4

    .help
        margin-top 20px
        text-align center

        .mascot
            background url(../img/mascot.jpg) no-repeat 0 0
            background-image -webkit-image-set(url(../img/mascot.jpg) 1x,url(../img/mascot@2x.jpg) 2x)
            width 41px
            height 47px
            margin-right 10px
            vertical-align middle