@import 'common/mixin.styl'
@import 'pc/common/variable.styl'

.promotion-index

    > .overview
        padding 20px
        background-color #FFF

        > .floated
            float right
            border-left 1px solid $brand-border
            padding-left 30px
            width 300px

            li
                padding 15px 0

                + li
                    border-top 1px solid $brand-divider

            .money
                font-size 150%
                margin-right 5px

        .balance
            margin-right 310px

            > .header
                > .floated
                    float right
            > .body
                margin 11px 0

                .money
                    font-size 200%
                    margin-right 5px

            > .footer
                > .floated
                    float right

    > .detail

        margin-top 20px

        .panel
            padding-bottom 20px

        thead
            background-color transparent

        .no-data
            padding 20px 0

        th.date,
        td.date
            text-align left
            padding-left 30px
