@import 'pc/common/variable.styl'

.center-charge

    .tabs
        border 1px solid $brand-border
        border-bottom none
        display inline-block
        width auto
        margin-bottom $gap-huge

    .tab
        background-color $brand-bg
        border-left 1px solid $brand-border
        padding-left 2 * $gap-huge
        padding-right 2 * $gap-huge

        &:first-child
            border-left none

        &.active
            background-color #FFF

    .btn-charge
        margin-top $gap-large
        width 100px

    .help
        margin-top $gap-huge
        text-align center

        .mascot
            background url(/src/common/img/emotion/doubt.png) no-repeat 0 0
            background-image -webkit-image-set(url(/src/common/img/emotion/doubt.png) 1x,url(/src/common/img/emotion/doubt@2x.png) 2x)
            width 53px
            height 62px
            margin-right $gap-medium
            vertical-align middle
