@import '../variable.styl'

.tag-input
    background-color #FFF
    border 1px solid $brand-border
    display inline-block
    position relative

    > .buttons
        padding-left $gap-medium
        padding-right $gap-medium

        > .button
            margin $gap-small $gap-small 0 0 !important

    .icon-times
        margin-left $gap-small

    > .input
        width 100%

    > .input,
    input,
    textarea
        border-width 0
